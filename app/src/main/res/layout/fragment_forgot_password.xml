<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.dashboard.ForgotPasswordFragment">

    <ImageView
        android:id="@+id/RgNavigateBack"
        android:layout_width="19dp"
        android:layout_height="30dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:src="@drawable/navigate" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:text="Забыли пароль?"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Не волнуйтесь! Такое случается. Пожалуйста, введите адрес электронной почты, связанный с вашей учетной записью."
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/LgTextPersonName1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/round_back_primary"
            android:hint="Введите e-mail"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fg_textview5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/green"
        android:padding="12dp"
        android:text="Отправить код"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/RgTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="356dp"
            android:text="Помните пароль? "
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/RgTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="356dp"
            android:text="Войти"
            android:textColor="@color/green"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>