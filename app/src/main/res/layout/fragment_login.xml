<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.dashboard.LoginFragment">

    <ImageView
        android:id="@+id/RgNavigateBack"
        android:layout_width="19dp"
        android:layout_height="30dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:src="@drawable/navigate" />

    <TextView
        android:id="@+id/LgtextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="53px"
        android:layout_marginBottom="14sp"
        android:fontFamily="sans-serif-medium"
        android:text="Добро пожаловать! Рады Вас видеть снова!"
        android:textColor="@color/black"
        android:textSize="36sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16sp"
        android:orientation="vertical">

        <EditText
            android:paddingStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/LgTextPersonName1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_back_primary"
            android:hint="Введите e-mai"
            android:textColorHint="@color/grey"
            android:inputType="textPersonName"
            android:textColor="@color/grey"/>


        <EditText
            android:id="@+id/LgTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="24dp"
            android:ems="10"
            android:textColorHint="@color/grey"
            android:background="@drawable/round_back_primary"
            android:hint="Введите ваш пароль"
            android:paddingStart="16dp"
            android:textColor="@color/grey"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="18sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lgtextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220sp"
            android:text="Забыли пароль?"
            android:textColor="@color/grey" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="18sp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/lgbutton1"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Войти"
            app:cornerRadius="30dp"
            android:backgroundTint="@color/green"
            android:layout_marginLeft="32dp">


        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

    <TextView
        android:id="@+id/lgtextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ИЛИ"
        android:textColor="@color/grey"
        android:textSize="12dp">

    </TextView>

    London, [16.03.2023 10:14]

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lgImageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/LgImageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/google">


        </ImageView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/LgTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="160dp"
            android:text="Нет аккаунта?  "
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/LgTextView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/green"
            android:layout_marginTop="160dp"
            android:textSize="12dp"
            android:text="Зарегистрируйтесь сейчас"/>
    </LinearLayout>
</LinearLayout>