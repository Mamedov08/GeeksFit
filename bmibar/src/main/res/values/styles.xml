<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BMIBar">
        <item name="android:layout_marginStart">@dimen/bmi_bar_bar_padding</item>
        <item name="android:layout_marginEnd">@dimen/bmi_bar_bar_padding</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <style name="BMITextBar">
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/bmi_text</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <style name="BMITextValue">
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/bmi_text_title</item>
    </style>
    <style name="BMITextUnit">
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/bmi_text_title</item>
    </style>
</resources>